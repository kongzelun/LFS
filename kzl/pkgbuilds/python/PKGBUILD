# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=python
pkgver=3.9.2
pkgrel=1
epoch=1
pkgdesc="Next generation of the python high-level scripting language"
arch=('x86_64')
url="https://www.python.org/"
depends=(expat gdbm libffi libnsl openssl)
provides=(cython meson ninja python-dnspython python-fonttools python-setuptools python-wheel)
conflicts=(cython meson ninja python-dnspython python-fonttools python-setuptools python-wheel)
replaces=(cython meson ninja python-dnspython python-fonttools python-setuptools python-wheel)
makedepends=(mpdecimal sqlite valgrind)
# makedepends=(mpdecimal sqlite tk valgrind)
install=$pkgname.install
source=(https://www.python.org/ftp/python/$pkgver/Python-$pkgver.tar.xz{,.asc}
        $pkgname.install)
sha256sums=('3c2034c54f811448f516668dce09d24008a0716c3a794dd8639b5388cbde247d'
            'SKIP'
            'd5806c2584f2231b70aeb083bc6a691cebe9aeebd01eacf49c2b514d4a44af21')
validpgpkeys=('E3FF2839C048B25C084DEBE9B26995E310250568')

build() {
  cd Python-$pkgver

  CFLAGS="${CFLAGS/-O2/-O3} -fno-semantic-interposition"
  LDFLAGS+=" -fno-semantic-interposition"

  ./configure \
    --prefix=/usr \
    --enable-shared \
    --enable-optimizations \
    --enable-loadable-sqlite-extensions \
    --enable-ipv6 \
    --enable-big-digits \
    --with-universal-archs="intel-64" \
    --with-lto \
    --with-tzpath=/usr/share/zoneinfo \
    --with-system-expat \
    --with-system-ffi \
    --with-system-libmpdec \
    --with-dbmliborder=gdbm:ndbm \
    --with-valgrind \
    --with-computed-gotos \
    --with-ensurepip=no

  make EXTRA_CFLAGS="$CFLAGS"
}

package() {
  cd Python-$pkgver

  make DESTDIR="$pkgdir/" EXTRA_CFLAGS="$CFLAGS" install

  ln -s python${pkgver:0:3} "$pkgdir"/usr/bin/python
}
