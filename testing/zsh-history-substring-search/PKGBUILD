pkgname=zsh-history-substring-search
pkgver=1.0.2
pkgrel=1
pkgdesc="ZSH port of Fish history search (up arrow)"
arch=(x86_64)
url="https://github.com/zsh-users/zsh-history-substring-search"
depends=(zsh)
source=(git+https://github.com/zsh-users/zsh-history-substring-search.git#commit=2c36e4dd3aad8ca538df917094713d177815388b?signed)
sha256sums=('SKIP')
validpgpkeys=('5DE3E0509C47EA3CF04A42D34AEE18F83AFDEB23')

package() {
  cd $pkgname

  install -Dm644 $pkgname.zsh -t "$pkgdir"/usr/share/zsh/plugins/$pkgname/
}
