package() {
  cd $pkgdir
  
  # root filesystem
  for d in boot dev etc home mnt usr var opt srv run; do
    install -dm755 $d
  done
  install -dm555 proc
  install -dm555 sys
  install -dm0750 root
  install -dm1777 tmp

  # /etc
  install -d etc/{skel,profile.d} usr/share/factory/etc
  for f in fstab group host.conf hosts os-release passwd profile resolv.conf securetty shells; do
    install -m644 "$srcdir"/$f etc/
    install -m644 "$srcdir"/$f usr/share/factory/etc/
  done
  ln -s ../proc/self/mounts etc/mtab
  for f in crypttab gshadow shadow; do
    install -m600 "$srcdir"/$f etc/
    install -m600 "$srcdir"/$f usr/share/factory/etc/
  done

  # /usr
  for d in bin include lib share src; do
    install -d -m755 usr/$d
  done
  for d in {1..8}; do
    install -d -m755 usr/share/man/man$d
  done

  # /usr/local
  for d in bin etc include lib man share src; do
    install -d -m755 usr/local/$d
  done
  ln -s bin usr/local/sbin
  ln -s ../man usr/local/share/man


  # bin symlinks
  ln -s usr/bin bin
  ln -s usr/bin sbin
  ln -s bin usr/sbin

  # lib symlinks
  ln -s usr/lib lib
  ln -s usr/lib lib64
  ln -s lib usr/lib64

  # systemd.environment-generator
  install -Dm755 "$srcdir"/systemd.environment-generator usr/lib/systemd/system-environment-generators/path

  # systemd-sysctl
  # install -Dm644 "$srcdir"/sysctl usr/lib/sysctl.d/10-arch.conf

  # systemd-sysusers
  # install -Dm644 "$srcdir"/sysusers usr/lib/sysusers.d/arch.conf

  # systemd-tmpfiles
  # install -Dm644 "$srcdir"/tmpfiles usr/lib/tmpfiles.d/arch.conf

  # add logo
  # install -D -m644 "$srcdir"/archlinux.{svg,png} usr/share/pixmaps
}
