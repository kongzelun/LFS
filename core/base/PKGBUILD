# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=base
pkgver=2020.0514
pkgrel=1
pkgdesc="Minimal package set to define a basic KZL Linux installation"
arch=(any)
depends=(
  filesystem linux-api-headers tzdata glibc
  zlib binutils gcc
  ncurses readline bash
  coreutils file findutils gawk grep procps-ng sed tar
  gettext pciutils psmisc shadow util-linux bzip2 gzip xz
  systemd pacman
  iputils iproute2
  autoconf
  automake
  bison
  cmake
  dbus
  e2fsprogs
  fakeroot
  flex
  git
  libtool
  m4
  make
  meson
  ninja
  patch
  perl
  pkgconf
  python
  sudo
  which
  zstd
  texinfo
  groff
)
optdepends=("linux: bare metal support")
backup=(etc/os-release)
source=(os-release)
sha256sums=('9178f1df5caa9f18ba20844c3fa5582d61994ae411751ca918505a1bfc5a198b')

package() {
  cd $pkgdir
  
  install -Dm644 "$srcdir"/os-release etc/os-release
  install -Dm644 "$srcdir"/os-release usr/share/factory/etc/os-release
}
