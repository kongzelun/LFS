# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=texinfo
pkgver=6.7
pkgrel=1
pkgdesc="GNU documentation system for on-line information and printed output"
arch=(x86_64)
url="https://www.gnu.org/software/texinfo/"
source=(https://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.xz{,.sig}
        texinfo-install.hook
        texinfo-remove.hook)
sha256sums=('988403c1542d15ad044600b909997ba3079b10e03224c61188117f3676b02caa'
            'SKIP'
            '5409fc3aa8a35e8f3d901e96bc50c986f204d90ce6bface0a7d79d99b487f801'
            '913ca8aac84386399b0a83ed0f6b04b5e6322da62f5c1d7ed31e1050ed37c1a9')
validpgpkeys=('EAF669B31E31E1DECBD11513DDBC579DAB37FBA9')

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr

  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir/" install

  install -Dm644 "$srcdir"/texinfo-{install,remove}.hook -t "$pkgdir"/usr/share/libalpm/hooks/
}
