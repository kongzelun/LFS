# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=automake
pkgver=1.16.2
pkgrel=1
pkgdesc="A GNU tool for automatically creating Makefiles"
arch=(any)
url="https://www.gnu.org/software/automake"
source=(https://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.xz{,.sig})
sha256sums=('ccc459de3d710e066ab9e12d2f119bd164a08c9341ca24ba22c9adaa179eedd0'
            'SKIP')
validpgpkeys=('E1622F96D2BB4E58018EEF9860F906016E407573'
              'F2A38D7EEB2B66405761070D0ADEE10094604D37'
              '155D3FC500C834486D1EEA677FD9FCCB000BEEEE')

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr

  make
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir/" install
}
