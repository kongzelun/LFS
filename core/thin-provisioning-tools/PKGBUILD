# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=thin-provisioning-tools
pkgver=0.8.5
pkgrel=1
pkgdesc="Suite of tools for manipulating the metadata of the dm-thin device-mapper target"
arch=('x86_64')
url="https://github.com/jthornber/thin-provisioning-tools"
depends=(expat libaio)
makedepends=(boost)
source=(https://github.com/jthornber/$pkgname/archive/v$pkgver.tar.gz)
sha256sums=('377f40ba6331ecee025e0f39942a5d33f8eadc4d68b484f5fce189f03dd9f662')

prepare() {
  cd $pkgname-$pkgver

  autoconf -i -f -v
}

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr

  make
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir/" BINDIR="$pkgdir/usr/bin/" MANDIR="/usr/share/man/" install
}
