# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=libuv
pkgver=1.36.0
pkgrel=1
pkgdesc="Multi-platform support library with a focus on asynchronous I/O"
arch=(x86_64)
url="https://github.com/libuv/libuv"
source=($url/archive/v$pkgver/$pkgname-$pkgver.tar.gz)
sha256sums=('b8e61a33ef49d9708f3754d9da915212bc09daf6777d2fc74ff5a38f5d49be12')

prepare() {
  cd $pkgname-$pkgver

	./autogen.sh
}

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr

  make
}

check() {
  cd $pkgname-$pkgver

  make check || true
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir/" install
}
