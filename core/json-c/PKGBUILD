# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=json-c
pkgver=0.13.1
pkgrel=1
pkgdesc="A JSON implementation in C"
arch=(x86_64)
url="https://github.com/json-c/json-c/wiki"
source=(git+https://github.com/$pkgname/$pkgname#tag=$pkgname-$pkgver-20180305)
sha256sums=('SKIP')

prepare() {
  cd $pkgname

  NOCONFIGURE=1 ./autogen.sh
}

build() {
  cd $pkgname

  ./configure \
    --prefix=/usr \
    --disable-static \
    --enable-threading

  make
}

check() {
  cd $pkgname

  make check
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir/" install
}
