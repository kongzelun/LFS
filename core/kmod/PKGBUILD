# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=kmod
pkgver=27
pkgrel=1
pkgdesc="Linux kernel module management tools and library"
arch=(x86_64)
url="https://git.kernel.org/?p=utils/kernel/kmod/kmod.git;a=summary"
depends=(openssl)
source=(https://www.kernel.org/pub/linux/utils/kernel/$pkgname/$pkgname-$pkgver.tar.{xz,sign})
sha256sums=('c1d3fbf16ca24b95f334c1de1b46f17bbe5a10b0e81e72668bdc922ebffbbc0c'
            'SKIP')
validpgpkeys=('EAB33C9690013C733916AC839BA2A5A630CBEA53')

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --with-xz \
    --with-zlib \
    --with-openssl

  make
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir/" install
}
