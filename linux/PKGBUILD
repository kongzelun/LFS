# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=linux
pkgver=5.4.42
pkgrel=1
pkgdesc="LTS Linux Kernel"
arch=('x86_64')
url="https://www.kernel.org"
makedepends=(bc)
options=(!strip)
source=($url/pub/linux/kernel/v${pkgver%%.*}.x/$pkgname-$pkgver.tar.{xz,sign}
        config)
sha256sums=('4e431b7c0266a07b76fdb77f8917ad681f0fa34ffba0eb8a172b67f7ef57bc31'
            'SKIP'
            'ec89652429ade4939f9f2d49da76989f04ff96311f933f9eb95f35e2bf13e222')
validpgpkeys=('ABAF11C65A2970B130ABE3C479BE3E4300411886'
              '647F28654894E3BD457199BE38DBBDC86092693E')

export KBUILD_BUILD_HOST=kzl-linux
export KBUILD_BUILD_USER=kzl
export KBUILD_BUILD_TIMESTAMP="$(date -Ru${SOURCE_DATE_EPOCH:+d @$SOURCE_DATE_EPOCH})"

prepare() {
  cd $pkgname-$pkgver

  mkdir build

  cp "$srcdir"/config build/.config
  make O=build olddefconfig

  make O=build nconfig

  make O=build -s kernelrelease > version

  msg2 $(<version)
}

build() {
  cd $pkgname-$pkgver

  make O=build all
}

package() {
  cd $pkgname-$pkgver

  local kernelver=$(<version)
  local modulesdir="/usr/lib/modules/$kernelver"

  make INSTALL_MOD_PATH="$pkgdir/usr" O=build modules_install

  # make INSTALL_PATH="$pkgdir/boot" O=build install

  install -Dm755 build/$(make O=build -s image_name) "$pkgdir/$modulesdir"/vmlinuz
  install -Dm755 build/$(make O=build -s image_name) "$pkgdir"/boot/vmlinuz-linux
  install -Dm644 build/System.map -t "$pkgdir/$modulesdir/"
  install -Dm644 build/System.map -t "$pkgdir"/boot/

  rm "$pkgdir"/usr/lib/modules/$kernelver/{build,source}
  cp -a build "$pkgdir"/usr/lib/modules/$kernelver/build
  rm -rf build
  cp -a . "$pkgdir"/usr/lib/modules/$kernelver/source
}
